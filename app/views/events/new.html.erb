<%= form_for @event, html: { role: 'form' } do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name  %>
  </div>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.text_field :date, data:{ provide:'datepicker' } %>
  </div>

  <div class="">
    <%= form.submit "Create Event!", class: 'btn btn-primary' %>
  </div>

<% end %>



<script>
  $( function() {
    $( "#event_date" ).datepicker();
  } );
</script>
