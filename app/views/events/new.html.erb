<%= form_for @event, html: { role: 'form' } do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name  %>
  </div>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.text_field :date, data:{ provide:'datepicker' } %>
  </div>

  <% friends = Array.new(9) { ['boy','girl'].sample + '-' + rand(1...22).to_s + '.png' } %>

  <%= form.label "Invite your friends" %>
  <div class="friends">
    <% friends.each do |friend|  %>
      <%= image_tag friend, height: '100px' %>
    <% end %>
  </div>

  <br />
  <br />

  <div class="">
    <%= form.submit "Create Event!", class: 'btn btn-primary' %>
  </div>

<% end %>



<script>
  $( function() {
    $( "#event_date" ).datepicker();
  } );
</script>
